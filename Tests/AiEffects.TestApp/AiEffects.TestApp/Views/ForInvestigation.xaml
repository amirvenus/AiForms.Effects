<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:ef="clr-namespace:AiForms.Effects;assembly=AiForms.Effects"
    x:Class="AiEffects.TestApp.Views.ForInvestigation"
    x:Name="me">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Go" Command="{Binding GoCommand}" />
    </ContentPage.ToolbarItems>
    
    <StackLayout>
        <Switch IsToggled="{Binding On.Value}" />
        <Entry Text="fuga" ef:Border.Width="{Binding Width.Value}" BackgroundColor="Silver" ef:Border.Color="{Binding Color.Value}"
ef:Border.Radius="{Binding Radius.Value}" ef:Border.On="{Binding On.Value}" /> 
    </StackLayout>
</ContentPage>
